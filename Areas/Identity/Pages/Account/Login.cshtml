@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
    .main_content {
        margin-top: 0;
    }

    .background-image {
        margin-top: 0;
    }
</style>
<div class="d-flex justify-content-start">
    <div class="col-lg-6 mt-5 opacityBackground">
        <section>
            <br /><br />
            <h1 class="ladna_czcionka">@ViewData["Title"]</h1>
            <br />
            <form id="account" method="post">
                <h4 class="ladna_czcionka">Zaloguj się na swoje konto</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Hasło</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Zapamiętaj hasło
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="g-recaptcha" data-sitekey="6LfbjKkZAAAAAEuQIOW6h5mvaxOJ-8ZygTl1T2qo"></div>
                    <button type="submit" class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "Home")'">Zaloguj się</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="ladna_czcionka" style="font-size: 30px;">Przypomnij hasło</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="ladna_czcionka" style="font-size: 30px;">Zostań nowym użytkownikiem</a>
                    </p>
                    <!--<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="ladna_czcionka" style="font-size: 20px;">Wyślij ponownie E-Mail potwierdzający</a>
                    </p>-->
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
