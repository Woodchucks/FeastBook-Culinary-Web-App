@model FeastBook_final.Models.Kategoria

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Html.RenderPartial("_HeaderNavbar");
}
<div class="d-flex ml-5">
    <div class="row opacityBackground">
        <h1 class="ladna_czcionka">Dodaj Kategorię</h1>
        <hr />
        <div class="col-lg-10">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nazwa" class="control-label"></label>
                    <input asp-for="Nazwa" class="form-control nazwa_kategorii" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>
                <!--
                <div class="form-group">
                    <label asp-for="NadKategoriaId" class="control-label"></label>
                    <select asp-for="NadKategoriaId" class="form-control" asp-items="ViewBag.NadKategoriaId"></select>
                </div>
                    -->
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-outline-warning" /> |
                    <a asp-controller="Home" asp-action="Index" class="ladna_czcionka" style="font-size: 25px;">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
