@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
    .main_content {
        margin-top: 0;
    }

    .background-image {
        margin-top: 0;
    }
</style>
<div class="d-flex justify-content-start">
    <div class="col-lg-6 mt-5 opacityBackground">
        <br /><br />
        <h1 class="ladna_czcionka">@ViewData["Title"]</h1>
        <br />
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="ladna_czcionka">Załóż profil</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Hasło</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="g-recaptcha" data-sitekey="6LfbjKkZAAAAAEuQIOW6h5mvaxOJ-8ZygTl1T2qo"></div>
                <button type="submit" class="btn btn-outline-warning">Rejestruj</button>
            </div>
        </form>
        <div>
            <a asp-controller="Home" asp-action="Index" class="ladna_czcionka">Powrót</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
